<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="_4080capstone.Views.TextInputWindow"
        Title="TextInputWindow"
        MinWidth="500" MinHeight="350"
		Width="500" Height="350"
        CanResize="True"
        Padding="10">

	<DockPanel LastChildFill="True">
		<Grid DockPanel.Dock="Bottom"
              ColumnSpacing="10"
              Margin="0,10,0,0"
              HorizontalAlignment="Right"
              ColumnDefinitions="1*,1*">
			<Button Name="saveButton" Grid.Column="0" Click="SaveButton_Click">Save</Button>
			<Button Name="cancelButton" Grid.Column="1" Click="CancelButton_Click">Cancel</Button>
		</Grid>

		<TextBox Name="UserInput"
                 AcceptsReturn="True"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 TextWrapping="Wrap"/>
	</DockPanel>
</Window>

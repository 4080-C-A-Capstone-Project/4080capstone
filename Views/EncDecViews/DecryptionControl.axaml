<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="_4080capstone.Views.DecryptionControl">
	<StackPanel>
		<TextBlock>Select file to decrypt</TextBlock>
		<TextBox IsReadOnly="True" Name="txtDecryptFilePath"></TextBox>
		<Button Click="btnBrowseDecryptFile_Click">Browse</Button>

		<ComboBox Name="decryptionMethod" SelectedIndex="0">
		</ComboBox>

		<Label>Decryption Key</Label>
		<TextBox Name="txtDecryptKey"></TextBox>
		<Button Click="btnDecrypt_Click">Decrypt</Button>
	</StackPanel>
</UserControl>

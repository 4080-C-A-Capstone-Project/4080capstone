<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="_4080capstone.Views.MainWindow"
		xmlns:local="clr-namespace:_4080capstone.Views"
        Title="Crypt#">

	<SplitView IsPaneOpen="True" DisplayMode="Inline" OpenPaneLength="300">

		<!-- Left: Sidebar Navigation -->
		<SplitView.Pane>
			<ScrollViewer>
				<StackPanel>
					<TextBlock Name="WelcomeText" Text="Unknown User" />
					<Button Content="Manage User" Click="ShowUserView"/>
					<Button Content="Encryption" Click="ShowEncryptionView"/>
					<Button Content="Keys" Click="ShowKeysView"/>
				</StackPanel>
			</ScrollViewer>
		</SplitView.Pane>

		<ScrollViewer>
			<ContentControl Content="{Binding SelectedView}" />
		</ScrollViewer>
	</SplitView>
	
	
</Window>
